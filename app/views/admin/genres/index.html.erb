<div class="container">
<div class="border-bottom border-info" style="padding:10px;">
<div class="row justify-content-center">
<h2 class="title mb-2">ジャンル管理</h2>
</div>
</div>

<div class="row justify-content-center">
<div class="col-md-3 m-3 p-3">
<h5 class="title mb-2">ジャンル新規登録</h5>
<%= form_with model: @genre, url:admin_genres_path, method: :post do |f| %>

 <div class="form-group row">
 <div class="field">
 <h6 class="text-dark p-2 mb-0">ジャンル名</h6>
　<%= f.text_field :name, class: 'form-control'%>
 </div>
 </div>
 <div class="actions">
  <%= f.submit '投稿',class: "btn btn-primary" %>
 </div>
<% end %>

</div>

<div class="col-md-8 m-3 p-3 offset-md-1">
<h5 class="title m-2 p-2 mb-0">ジャンル一覧</h5>
<% @genres.each do |genre| %>

<table class="table hover table-inverse" style="table-layout: auto;">
<tbody>
<tr>
<th scope="col"><%= genre.name %></th>
<th scope="col"><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %></th>
<th scope="col"><%= link_to "削除", admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
</tr>
</tbody>
</table>
<% end %>

</div>
</div>

</div>