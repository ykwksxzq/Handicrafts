<% if @post_crafts.present? %>

<% @post_crafts.each do |post_craft| %>
<%= link_to admin_post_craft_path(post_craft.id) do %>
<%= image_tag post_craft.get_image(200,200) %>
<% end %>

<%= post_craft.user.nick_name %>
<%= post_craft.title %>
♥<%= post_craft.favorites.count %>
<%= link_to "#{post_craft.post_comments.count} コメント", admin_post_craft_path(post_craft.id) %>
<% end %>
<% else %>
    投稿している作品はありません
 <% end %>
