<div class="container">
<div class="row justify-content-center">
<div class="col-md-5 col-sm-10 p-5">
<h4 class="text-dark p-4 mb-0"><%= @user.nick_name %>さんの会員情報編集</h4>

<%= form_with model: @user, url:update_information_path do |f| %>

  <div class="form-group row">
  <div class="field">
  <label for="inputName">ニックネーム</label>
  <%= f.text_field :nick_name, autofocus: true, id:"inputName", placeholder:"ニックネーム", class: 'form-control-file'%>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "form-control-file"%>
  </div>
  </div>


  <div class="form-group row">
  <div class="field">
  <label for="inputText">自己紹介</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputText", placeholder:"自己紹介", class: 'form-control-file'%>
  </div>
  </div>

  会員ステータス　<% @user.is_deleted %>
　<%= f.radio_button :is_deleted, "ture" %>
　<%= f.label :is_deleted_false, "有効" %>

　<%= f.radio_button :is_deleted, "false" %>
　<%= f.label :is_deleted_false, "退会" %>

　<br>

  <div class="actions">
   <%= f.submit "変更を保存", class: 'btn btn-success' %>
  </div>

<% end %>
</div>
</div>
</div>