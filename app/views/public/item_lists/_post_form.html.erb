<div class="form-group row">
 <div class="field">
  <h5 class="text-dark p-3 mb-0">アイテム画像</h5>
   <%= f.file_field :image, accept: "image/*", class: 'form-control-file' %>
 </div>
</div>

 <div class="form-group row">
  <div class="field">
   <h6 class="text-dark p-2 mb-0">アイテム名 (30文字以内）</h6>
    <%= f.text_field :item_name, class: 'form-control', placeholder:"30文字以内で入力"%>
  </div>
 </div>

 <div class="form-group row">
  <div class="field">
   <h6 class="text-dark p-2 mb-0">メモ（100文字以内）</h6>
    <%= f.text_area :memo, class: 'form-control', placeholder:"100文字以内で入力" %>
  </div>
 </div>

 <div class="form-group row">
  <div class="field">
   <h6 class="text-dark p-2 mb-0">ジャンル</h6>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, class: 'form-control'%>
  </div>
 </div>
