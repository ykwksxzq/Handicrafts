
 <div class="form-group row">
  <div class="field">
  <h5 class="text-dark p-3 mb-0">作品画像</h5>
  <%= f.file_field :image, accept: "image/*", class: 'form-control-file'%>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">タイトル</h5>
  <%= f.text_field :title, class: 'form-control' %>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">説明</h6>
  <%= f.text_area :introduction,class: 'form-control' %>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">ジャンル</h6>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, class: 'form-control' %>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">タグ</h6>
  <%= f.label :tag_list, "(,)コンマで区切って入力すれば、複数のタグを登録できます" %>
  <%= f.text_field :tag_list, value: @post_craft.tag_list.join(',') ,class: 'form-control'%>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">投稿ステータス</h6>
  <%= f.select :status, PostCraft.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-100"} %>
  </div>
  </div>


