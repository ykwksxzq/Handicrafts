 <div class="form-group row">
  <div class="field">
   <label for="inputImage">プロフィール画像</label>
    <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*",class: 'form-control-file'%>
   </div>
  </div>

  <div class="form-group row">
   <div class="field">
    <label for="inputName">ニックネーム</label>
     <%= f.text_field :nick_name, autofocus: true, id:"inputName", placeholder:"ニックネーム",class: 'form-control' %>
   </div>
  </div>

  <div class="form-group row">
   <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
   </div>
  </div>

  <div class="form-group row">
   <div class="field">
    <label for="inputText">自己紹介</label>
     <%= f.text_field :introduction, autofocus: true, id:"inputText", placeholder:"自己紹介",class: 'form-control' %>
   </div>
  </div>
