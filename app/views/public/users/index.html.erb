<div class="container">
<div class="border-bottom border-info" style="padding:10px;">
<div class="row justify-content-center">
<h2 class="title mb-2">
<%= current_user.nick_name %>さんの作品一覧(全<%= @post_crafts.total_count %>件)</h2>
</div>

<% if @post_craft.present? %>
<div class="row justify-content-start">
<%= link_to new_post_craft_path do %>
<i class="fa-solid fa-circle-plus"> 新規投稿</i>
<% end %>
</div>
</div>


<%= render 'public/post_crafts/index', post_crafts: @post_crafts %>

<% else %>
<div class="container-fluid">
<div class="row justify-content-center">
<div class="cover">
<div class="text-center">
<h3 class="title mb-2">
    保存している作品はありません</h3>
 <% end %>
</div>
</div>
</div>
</div>

<div class="pagination justify-content-center">
<%= paginate @post_crafts, theme: 'twitter-bootstrap-4' %>
</div>

</div>