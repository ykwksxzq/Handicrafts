<i class="fa-solid fa-plus"></i>
<%= link_to "新規投稿", new_post_craft_path %>

<% @post_craft.each do |post_craft| %>
<%= link_to post_craft_path(post_craft.id) do %>
<%= image_tag post_craft.get_image %>
<% end %>
<%= post_craft.user.nick_name %>
<%= post_craft.title %>
