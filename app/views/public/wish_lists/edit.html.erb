<div class="container">
 
 <%= render 'layouts/error_messages', model: @wish_list %>
 
 <div class="row justify-content-center">
  <div class="col-md-5 col-sm-10 m-3">
   <h4 class="text-dark p-4 mb-0">編集フォーム</h4>
    <%= form_with model: @wish_list, url:wish_list_path(@wish_list.id), method: :patch do |f| %>

      <%= render partial: 'form',  locals: {f:f } %>

      <div class="actions">
      <%= f.submit '更新',class: "btn btn-success"%>
      </div>
    <% end %>

   <br>
   <%= link_to "ほしいものリストに戻る", wish_list_path(current_user.id), class: "underline" %>
  </div>
 </div>
</div>