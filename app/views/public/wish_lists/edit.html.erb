<div class="container">
<div class="row justify-content-center">
<div class="col-md-5 col-sm-10">
<h4 class="text-dark p-4 mb-0">編集フォーム</h4>
<%= form_with model: @wish_list, url:wish_list_path(@wish_list.id), method: :patch do |f| %>

<div class="form-group row">
<div class="field">
<h6 class="text-dark p-2 mb-0">アイテム名</h6>
  <%= f.text_field :item_name, class: 'form-control' %>
</div>
</div>

<div class="form-group row">
<div class="field">
<h6 class="text-dark p-2 mb-0">備考</h6>
<%= f.text_field :memo, class: 'form-control' %>
</div>
</div>

<div class="form-group row">
<div class="field">
<h6 class="text-dark p-2 mb-0">ジャンル</h6>
  <%= f.collection_select :genre_id, Genre.all, :id, :name , class: 'form-control'%>
</div>
</div>

<div class="actions">
<%= f.submit '更新',class: "btn btn-success"%>
</div>
<% end %>

</div>
</div>
</div>