<div class="container">
<div class="border-bottom border-info" style="padding:10px;">
<div class="row justify-content-center">
<h2 class="title mb-2"><%= current_user.nick_name %>さんのほしいものリスト</h2>
</div>
</div>

<div class="row">
<div class="col-lg-3 m-3 p-5">
<div class="cover3">
<%= form_with model: @wish_list, url:wish_lists_path, method: :post do |f| %>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">アイテム名</h6>
  <%= f.text_field :item_name, class: 'form-control'%>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">備考</h6>
  <%= f.text_area :memo, class: 'form-control' %>
  </div>
  </div>

  <div class="form-group row">
  <div class="field">
  <h6 class="text-dark p-2 mb-0">ジャンル
  <%= f.collection_select :genre_id, Genre.all, :id, :name, class: 'form-control'%></h6>
  </div>
  </div>
  <div class="actions">
  <%= f.submit '保存',class: "btn btn-primary"%>
  </div>
  <% end %>

</div>
</div>

<%= link_to 'Sort by Name (ASC)', wish_lists_path(@genre, wish_lists: 'asc') %>
<%= link_to 'Sort by Name (DESC)', wish_lists_path(@genre, wish_lists: 'desc') %>


<div class="col-lg-7 m-5 offset-md-1">

<% if @wish_lists.present? %>

<table class="table table-hover table-inverse">
<thead>
<tr>
  <th>ジャンル</th>
  <th>アイテム名</th>
  <th>備考</th>
  <th></th>
  <th></th>
</thead>
<% @wish_lists.each do |wish_list| %>
<tbody>


  <td><%= wish_list.genre.name %></td>
  <td><%= wish_list.item_name %></td>
  <td><%= wish_list.memo %></td>
  <td><%= link_to '編集する', edit_wish_list_path(wish_list.id), class: "btn btn-success" %></td>
  <td><%= link_to "削除", wish_list_path(wish_list.id), class: "btn btn-danger", method: :delete %></td>
<% end %>
</tbody>
</table>

<% else %>
    保存しているアイテムはありません</h3>
<% end %>
</div>
</div>

</div>
